{
  "upstreams": {
    "io-board-cdn": {
      "servers": [
        {
          "host": "ioboard.blob.core.windows.net",
          "weigth": 1
        }
      ]
    },
    "dotnetdevops-cdn": {
      "servers": [
        {
          "host": "dotnetdevops.blob.core.windows.net",
          "weigth": 1
        }
      ]
    },
    "dotnetdevops-www": {
      "servers": [
        {
          "host": "dotnetdevops-www.azurewebsites.net",
          "weigth": 1
        }
      ]
    },
    "serverless-identity": {
      "servers": [
        {
          "host": "serverless-identity.azurewebsites.net",
          "weigth": 1
        }
      ]
    },
    "frontdoor-api": {
      "servers": [
        {
          "host": "frontdoor-api.azurewebsites.net",
          "weigth": 1
        }
      ]
    },
    "io-board-forms-provider": {
      "servers": [
        {
          "host": "io-board-forms.azurewebsites.net",
          "weigth": 1
        }
      ]
    },
    "letsencrypt-provider": {
      "servers": [
        {
          "host": "dotnetdevops-letsencrypt-dev-ci.azurewebsites.net",
          "weight": 1,
          "extensions": {
            "azure": {
              "functions": {
                "authentication": {
                  "subscriptionId": "0fd7128b-5305-49da-a400-b7a37feb271c",
                  "resourceGroupName": "dotnetdevops",
                  "name": "dotnetdevops-letsencrypt",
                  "slot": "dev-ci"
                }
              }
            }
          }
        }
      ]
    }

  },
  "servers": [
    {
      "hostnames": [ "*.forms.io-board.com" ],
      "locations": [
        {
          "route": "/",
          "proxy_pass": "https://dotnetdevops.eu.ngrok.io/"
        }
      ]
    },
    {
      "hostnames": [ "io-board.com" ],
      "locations": [
        {
          "route": "= /forms/",
          "rewrite": "^.*$ /index.html",
          "proxy_pass": "[blobFindVersion('http://io-board-cdn/libs/','com.io-board.forms')]"
        },
        {
          "route": "/forms/",
          "index": [ "index.html" ],
          "proxy_pass": "[blobFindVersion('http://io-board-cdn/libs/','com.io-board.forms')]"
        }
      ]
    },
    {
      "hostnames": [ "api.io-board.com" ],
      "locations": [
        {
          "route": "~* ^/providers/(io-board.forms)",
          "proxy_pass": "https://io-board-forms-provider/"
        }
      ]
    },
    {
      "locations": [
        {
          "route": "/.well-known/acme-challenge/",
          "proxy_pass": "https://letsencrypt-provider/.well-known/acme-challenge/",
          "health_check": {
            "path": "/",
            "interval": 60
          }
        }
      ],
      "hostnames": [ "*" ]
    },
    {
      "hostnames": [ "login.dotnetdevops.org" ],
      "locations": [
        {
          "route": "/",
          "proxy_pass": "https://serverless-identity/",
          "health_check": {
            "path": "/.well-known/live",
            "interval": 60
          }
        }
      ]
    },
    {
      "hostnames": [ "management.dotnetdevops.org" ],
      "locations": [
        {
          "route": "~* ^/providers/(DotNETDevOps.FrontDoor)",
          "proxy_pass": "http://frontdoor-api/",
          "health_check": {
            "path": "/.well-known/live",
            "interval": 60
          }
        },
        {
          "route": "~* ^/providers/(DotNETDevOps.LetsEncrypt)",
          "proxy_pass": "http://letsencrypt-provider/",
          "health_check": {
            "path": "/",
            "interval": 60
          }
        },
        {
          "route": "~* ^/providers/(DotNETDevOps.AzureTemplates)",
          "proxy_pass": "https://dotnetdevops-www/",
          "health_check": {
            "path": "/.well-known/live",
            "interval": 60
          }
        }
      ]
    },
    {
      "hostnames": [ "dotnetdevops.org", "www.dotnetdevops.org" ],
      "locations": [
        {
          "route": "= /",
          "rewrite": "^.*$ /index.html",
          "proxy_pass": "[blobFindVersion('http://dotnetdevops-cdn/libs/','dotnetdevops-front')]"
        },
        {
          "route": "/",
          "index": [ "index.html" ],
          "proxy_pass": "[blobFindVersion('http://dotnetdevops-cdn/libs/','dotnetdevops-front')]"
        },
        {
          "route": "= /frontdoor/",
          "rewrite": "^.*$ /index.html",
          "proxy_pass": "[blobFindVersion('http://dotnetdevops-cdn/libs/','frontdoor--front')]"
        },
        {
          "route": "/frontdoor/",
          "index": [ "index.html" ],
          "proxy_pass": "[blobFindVersion('http://dotnetdevops-cdn/libs/','frontdoor--front')]"
        }
      ]
    }
  ]

}