{
  "upstreams": {
    "dotnetdevops-cdn": {
      "servers": [
        {
          "host": "dotnetdevops.blob.core.windows.net",
          "weigth": 1
        }
      ]
    },
    "dotnetdevops-www": {
      "servers": [
        {
          "host": "dotnetdevops-www.azurewebsites.net",
          "weigth": 1
        }
      ]
    },
    "serverless-identity": {
      "servers": [
        {
          "host": "serverless-identity.azurewebsites.net",
          "weigth": 1
        }
      ]
    }

  },
  "servers": [
    {
      "hostnames": [ "login.dotnetdevops.org" ],
      "locations": [
        {
          "route": "/",
          "proxy_pass": "https://serverless-identity/",
          "features": {
            "CopyXForwardedHeaders": true,
            "AddXForwardedHeaders": true,
            "ApplyCorrelationId": true
          }
        }
      ]
    },
    {
      "locations": [
        {
          "route": "= /",
          "proxy_pass": "http://dotnetdevops-www/",
          "features": {
            "CopyXForwardedHeaders": true,
            "AddXForwardedHeaders": true,
            "ApplyCorrelationId": true
          }
        },
        {
          "route": "/",
          "proxy_pass": "http://dotnetdevops-www/",
          "features": {
            "CopyXForwardedHeaders": true,
            "AddXForwardedHeaders": true,
            "ApplyCorrelationId": true
          }
        },
        {
          "route": "= /frontdoor/",
          "proxy_pass": "https://localhost:8080/index.html",
          "features": {
            "CopyXForwardedHeaders": true,
            "AddXForwardedHeaders": true,
            "ApplyCorrelationId": true
          }
        },
        {
          "route": "/frontdoor/",
          "proxy_pass": "https://localhost:8080/",
          "features": {
            "CopyXForwardedHeaders": true,
            "AddXForwardedHeaders": true,
            "ApplyCorrelationId": true
          }
        },
        {
          "route": "/sockjs-node/",
          "proxy_pass": "https://localhost:8080/",
          "features": {
            "CopyXForwardedHeaders": true,
            "AddXForwardedHeaders": true,
            "ApplyCorrelationId": true
          }
        }
      ],
      "hostnames": [ "dotnetdevops.org", "www.dotnetdevops.org", "localhost" ]
    }
  ]

}